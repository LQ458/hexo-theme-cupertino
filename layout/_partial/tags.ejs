<div class="container">
  <div class="meta">
    <h2 class="title"><%= __('tags') %></h2>
  </div>
  <div class="divider"></div>
  <div class="tags">
    <% site.tags.forEach(tag => { %>
    <a href="<%- url_for(tag.path) %>" class="tag"><% if (theme.hashtag_prefix_before_tags) { %>#<% } %><%- tag.name %></a>
    <% }) %>
  </div>
</div>
